# Test return values and early returns

# Simple return
fn add(a: number, b: number) -> number {
	return a + b
}

# Early return in if statement
fn max(a: number, b: number) -> number {
	if a > b {
		return a
	}
	return b
}

# Return without value
fn greet(name: str) {
	print("Hello, ")
	print(name)
	print("\n")
	return
}

# Nested returns
fn abs(n: number) -> number {
	let zero = 0
	if n < zero {
		return zero - n
	}
	return n
}

print("add(5, 3) = ")
print(add(5, 3))
print("\n")

print("max(10, 20) = ")
print(max(10, 20))
print("\n")

greet("Alice")

let neg42 = -42
print("abs(-42) = ")
print(abs(neg42))
print("\n")

print("abs(42) = ")
print(abs(42))
print("\n")
